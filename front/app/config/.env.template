# set to 'prod' to use production settings / 'dev' otherwise
TARGET="dev"

# Lower case name of the application
APP_NAME=aikon

# Application language ("fr" or "en")
APP_LANG="en"

# Debug mode
DEBUG="True"

# To allow pickle as Celery serializer
C_FORCE_ROOT="True"

# Absolute path to the media files directory (no / at the end) (for Docker => /data/mediafiles)
MEDIA_DIR=/absolute/path/to/project/mediafiles

# Email address for support and inquiries
CONTACT_MAIL="admin@mail.com"

# Database name
POSTGRES_DB=aikon

# Database admin name
POSTGRES_USER=admin

# Database password
POSTGRES_PASSWORD=

# Database host (for Docker => db)
DB_HOST="localhost"

# Database port
DB_PORT=5432

# URL used in production without 'https://' (domain name only)
PROD_URL=

# Port used in dev for django app
FRONT_PORT=8000

# List of allowed host separated by a comma
ALLOWED_HOSTS="localhost,127.0.0.1"

# Secret key used for the application
SECRET_KEY=

# SimpleAnnotationServer username
SAS_USERNAME=sas

# SimpleAnnotationServer password
SAS_PASSWORD=

# SimpleAnnotationServer port
SAS_PORT=8888

# Cantaloupe port
CANTALOUPE_PORT=8182

CANTALOUPE_PORT_HTTPS=8183

# Geonames username (create yours on https://www.geonames.org/login)
GEONAMES_USER=

# API URL to which send requests for image analysis (same as PROD_URL in api/.env)
CV_API_URL=https://discover-api.enpc.com

# Computer vision apps to install (available regions / similarity / vectorization)
ADDITIONAL_MODULES=regions,similarity,vectorization

# Redis host (for Docker => redis / for other config => localhost)
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password (leave blank on local)
REDIS_PASSWORD=

# SMTP server domain
EMAIL_HOST=smtp.gmail.com

# Email address to send alert emails
EMAIL_HOST_USER=app_name@mail.com

# App password for email address
EMAIL_HOST_PASSWORD=

# Default 'From' email address for outgoing emails
DEFAULT_FROM_EMAIL=noreply@domain-name.com

# Logos to be displayed in the footer (must correspond to an image file matching pattern: 'front-dir/app/webapp/static/img/logo-*.png')
APP_LOGO=anr,ponts
